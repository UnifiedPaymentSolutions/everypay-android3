<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ep_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/ep_primary</item>
        <item name="colorPrimaryDark">@color/ep_primary</item>
        <item name="colorAccent">@color/ep_accent</item>
        <item name="android:textViewStyle">@style/ep_TextViewTheme</item>
    </style>

    <style name="ep_FloatingProgressTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ep_FloatingDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:titleTextColor">@android:color/white</item>
        <item name="android:dialogTitle">@style/ep_DialogTitleTheme</item>
        <item name="android:textViewStyle">@style/ep_TextViewTheme</item>
        <item name="android:buttonStyle">@style/ep_DialogButtonTheme</item>
    </style>

    <style name="ep_TextViewTheme" parent="android:Widget.TextView">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="ep_DialogTitleTheme">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
        <item name="android:textColor">@color/ep_accent</item>
    </style>

    <style name="ep_DialogButtonTheme" parent="@android:style/Widget.ActionButton">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
        <item name="android:textColor">@color/ep_accent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ep_LinearProgressDrawableStyle" parent="Material.Drawable.LinearProgress">
        <item name="lpd_strokeSize">@dimen/ep_toolbar_progress_height</item>
        <item name="lpd_strokeColor">?attr/colorAccent</item>
        <item name="lpd_strokeSecondaryColor">@color/ep_accent</item>
    </style>

    <style name="ep_AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/ep_primary</item>
        <item name="android:titleTextColor">@android:color/white</item>
        <item name="colorAccent">@color/ep_accent</item>
    </style>

    <style name="ep_Theme_AppCompat_Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="colorPrimary">@color/ep_primary</item>
        <item name="colorPrimaryDark">@color/ep_primary_text</item>
        <item name="colorAccent">@color/ep_accent</item>
    </style>

    <style name="ep_Theme_AppCompat_NoActionBar" parent="ep_AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/ep_primary</item>
        <item name="colorPrimaryDark">@color/ep_primary_text</item>
        <item name="colorAccent">@color/ep_accent</item>
    </style>

</resources>
